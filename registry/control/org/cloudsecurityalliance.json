{
  "schema_version": "1.0",
  "namespace": "cloudsecurityalliance.org",
  "type": "control",
  "status": "draft",
  "status_notes": null,

  "official_name": "Cloud Security Alliance",
  "common_name": "CSA",
  "alternate_names": ["CSA"],
  "notes": "CSA is the leading cloud security standards body. Industry standard (CCM used in thousands of organizations), vendor neutral, expanding into AI security. Publishes control frameworks (CCM, AICM), runs the STAR certification program (public compliance attestations), and conducts AI security research through its AI Safety Initiative.",
  "wikidata": null,
  "wikipedia": null,

  "urls": [
    {"type": "website", "url": "https://cloudsecurityalliance.org"}
  ],

  "match_nodes": [
    {
      "patterns": ["(?i)^ccm$"],
      "description": "Cloud Controls Matrix",
      "weight": 100,
      "data": {
        "official_name": "Cloud Controls Matrix",
        "common_name": "CCM",
        "alternate_names": null,
        "description": "The de facto standard for cloud security controls, organized by domains containing controls.",
        "notes": "Version 4.0 released 2021. 197 control objectives across 14 domains. Three-letter domain code + two-digit control number (e.g., IAM-01). Maps to ISO 27001, NIST, PCI-DSS. Used for STAR certification. Available as spreadsheet download. Domain codes use 2-3 uppercase letters.",
        "urls": [
          {"type": "website", "url": "https://cloudsecurityalliance.org/research/cloud-controls-matrix"},
          {"type": "docs", "url": "https://cloudsecurityalliance.org/artifacts/cloud-controls-matrix-v4", "note": "Download page for v4"}
        ],
        "version_required": false,
        "unversioned_behavior": "current_with_history",
        "versions_available": [
          {"version": "4.0", "release_date": "2021-06-01", "status": "current"},
          {"version": "3.0.1", "release_date": "2017-06-01", "status": "superseded", "note": "Still referenced in older compliance documentation."}
        ],
        "examples": ["IAM-01", "DSP-07", "GRC-01"]
      },
      "children": [
        {
          "patterns": ["^[A-Z]{2,3}$"],
          "description": "Control domain (e.g., IAM). Contains multiple controls.",
          "data": {
            "type": "domain",
            "known_values": {
              "AIS": "Application & Interface Security",
              "BCR": "Business Continuity & Resilience",
              "CCC": "Change Control & Configuration",
              "DSP": "Data Security & Privacy",
              "GRC": "Governance, Risk & Compliance",
              "HRS": "Human Resources Security",
              "IAM": "Identity & Access Management",
              "IPY": "Interoperability & Portability",
              "IVS": "Infrastructure & Virtualization",
              "LOG": "Logging & Monitoring",
              "SEF": "Security Incident Management",
              "STA": "Supply Chain, Transparency, Accountability",
              "TVM": "Threat & Vulnerability Management",
              "UEM": "Universal Endpoint Management"
            }
          }
        },
        {
          "patterns": ["^[A-Z]{2,3}-\\d{2}$"],
          "description": "Specific control (e.g., IAM-01, DSP-07). Belongs to a domain.",
          "data": {"type": "control"}
        }
      ]
    },

    {
      "patterns": ["(?i)^aicm$"],
      "description": "AI Controls Matrix",
      "weight": 100,
      "data": {
        "official_name": "AI Controls Matrix",
        "common_name": "AICM",
        "alternate_names": null,
        "description": "Security controls specific to AI/ML systems, complementing CCM for AI workloads.",
        "notes": "Version 1.0 released 2024. Addresses model training security, data poisoning prevention, inference security, model theft protection, bias and fairness controls, and AI supply chain security. Aligns with NIST AI RMF. Available as spreadsheet download. Use both CCM and AICM for comprehensive AI cloud security.",
        "urls": [
          {"type": "website", "url": "https://cloudsecurityalliance.org/artifacts/ai-controls-matrix"},
          {"type": "docs", "url": "https://cloudsecurityalliance.org/artifacts/ai-controls-matrix", "note": "Download page"}
        ],
        "examples": ["AI-GOV-01", "AI-DAT-03", "AI-SEC-01"]
      },
      "children": [
        {
          "patterns": ["^AI-[A-Z]{3}$"],
          "description": "AICM control domain (e.g., AI-GOV, AI-DAT)",
          "data": {
            "type": "domain",
            "known_values": {
              "AI-GOV": "AI Governance",
              "AI-DAT": "Data Management",
              "AI-MOD": "Model Security",
              "AI-OPS": "AI Operations",
              "AI-ETH": "AI Ethics",
              "AI-PRI": "AI Privacy",
              "AI-SEC": "AI Security"
            }
          }
        },
        {
          "patterns": ["^AI-[A-Z]{3}-\\d{2}$"],
          "description": "Specific AICM control (e.g., AI-GOV-01, AI-DAT-03)",
          "data": {"type": "control"}
        }
      ]
    },

    {
      "patterns": ["(?i)^ai-safety$"],
      "description": "AI Safety Initiative",
      "weight": 100,
      "data": {
        "official_name": "AI Safety Initiative",
        "common_name": null,
        "alternate_names": null,
        "description": "CSA's working group bringing together industry efforts on AI security research and best practices.",
        "notes": "Part of CSA research program. Open participation. Develops the AI Controls Matrix, publishes AI security research papers, best practices documentation, and facilitates industry collaboration. Regular publications and updates.",
        "urls": [
          {"type": "website", "url": "https://cloudsecurityalliance.org/research/working-groups/artificial-intelligence"}
        ],
        "examples": []
      }
    }
  ]
}
